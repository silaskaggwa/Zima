<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.silas"
    android:versionCode="1"
    android:versionName="1.0" >

    <uses-sdk android:minSdkVersion="10" />

    <application
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name" >
        <activity
            android:name=".ZimaActivity"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
	        android:name=".VisitsActivity"
	        android:label="@string/title_activity_display_message">
	        <meta-data
	            android:name="android.support.PARENT_ACTIVITY"
	            android:value="com.silas.ZimaActivity" />
	    </activity>
	    <activity
	        android:name=".CalendarActivity"
	        android:label="@string/title_activity_display_message">
	        <meta-data
	            android:name="android.support.PARENT_ACTIVITY"
	            android:value="com.silas.ZimaActivity" />
	    </activity>
	    <!--  Visit Info Activity -->
        <activity android:name=".AddVisitInfoActivity" />
        
        <!--  Schedule Visit Activity -->
        <activity android:name=".ScheduleVisitActivity" />
        
        <!--  Visit History -->
        <activity android:name=".VisitHistoryActivity" />

    </application>

</manifest>